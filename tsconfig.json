{
  "compilerOptions": {
    "strict": true,
    "target": "es2016",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": "./src",
  },
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
